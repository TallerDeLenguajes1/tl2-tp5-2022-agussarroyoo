@{
    ViewData["Title"] = "Registrar cadete";
}
@model tl2_tp5_2022_agussarroyoo.ViewModels.CadeteViewModel

<div class="text-center">
    <h1 class="display-4">Alta de Cadete</h1>
</div>
<form method="post" asp-action="Alta" asp-controller="Cadete">
  <div class="mb-3">
    <label asp-for="@Model.Nombre" class="form-label">Nombre
      <input asp-for="@Model.Nombre" type="text" class="form-control" id="nombre" aria-describedby="emailHelp" name="nombre" >
    </label>
    <span asp-validation-for="@Model.Nombre"></span>
  </div>
  <div class="mb-3">
    <label asp-for="@Model.Telefono" class="form-label">Telefono</label>
      <input asp-for="@Model.Telefono" type="number" class="form-control" id="telefono" name = "telefono">
    <label asp-validation-for="@Model.Telefono" class="label label-danger"></label>

  </div>
  <div class="mb-3">
    <label asp-for="@Model.Direccion" class="form-label">Direccion</label>
      <input asp-for="@Model.Direccion" type="text" class="form-control" id="direccion" name = "direc">
    <label asp-validation-for="@Model.Direccion" class="label label-danger"></label>
  </div>
  <input type="submit" value="Registrar">
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> } 
