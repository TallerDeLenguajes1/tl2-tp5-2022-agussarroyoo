@model tl2_tp5_2022_agussarroyoo.ViewModels.CadeteViewModel

@{
    ViewData["Title"] = "Editar cadete";
}

<div class="text-center">
    <h1 class="display-4">Editar Cadete</h1>
</div>
<form method="post">
    <input type="hidden" class="form-control" id="id" aria-describedby="emailHelp" name="id" value=@Model.ID>
  <div class="mb-3">
    <label for="nombre" class="form-label">Nombre</label>
    <input type="text" class="form-control" id="nombre" aria-describedby="emailHelp" name="nombre" value=@Model.Nombre>
  </div>
  <div class="mb-3">
    <label for="telefono" class="form-label">Telefono</label>
    <input type="number" class="form-control" id="telefono" name = "telefono"  value=@Model.Telefono> 
  </div>
  <div class="mb-3">
    <label for="direccion" class="form-label">Direccion</label>
    <input type="text" class="form-control" id="direccion" name = "direc"  value=@Model.Direccion>
  </div>
  <input type="submit" value="Actualizar">
</form>